{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "MCStorName": {
            "type": "string"
        },
        "MCStorType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS"
            ]
        },
        "MCStorLocation": {
            "type": "string",
            "defaultValue": "West US",
            "allowedValues": [
                "East US",
                "West US",
                "West Europe",
                "East Asia",
                "South East Asia"
            ]
        },
        "MatterCenterName": {
            "type": "string"
        },
        "MatterCenterLocation": {
            "type": "string"
        },
        "MatterCenterSKU": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard"
            ],
            "defaultValue": "Free"
        },
        "MatterCenterWorkerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "0"
        },
        "MCWebName": {
            "type": "string"
        },
        "MCDBServerName": {
            "type": "string"
        },
        "MCDBServerLocation": {
            "type": "string"
        },
        "MCDBServerAdminLogin": {
            "type": "string"
        },
        "MCDBServerAdminLoginPassword": {
            "type": "securestring"
        },
        "MCDBName": {
            "type": "string"
        },
        "MCDBCollation": {
            "type": "string",
            "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
        },
        "MCDBEdition": {
            "type": "string",
            "defaultValue": "Web",
            "allowedValues": [
                "Basic",
                "Business",
                "Premium",
                "Standard",
                "Web"
            ]
        },
        "MCSQLImportStorageKeyType": {
            "type": "string"
        },
        "MCSQLImportStorageKey": {
            "type": "securestring"
        },
        "MCSQLImportStorageUri": {
            "type": "string"
        },
        "MCSQLImportAdministratorLogin": {
            "type": "string"
        },
        "MCSQLImportAdministratorLoginPassword": {
            "type": "securestring"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[parameters('MCStorName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[parameters('MCStorLocation')]",
            "apiVersion": "2015-05-01-preview",
            "dependsOn": [ ],
            "tags": {
                "displayName": "MCStor"
            },
            "properties": {
                "accountType": "[parameters('MCStorType')]"
            }
        },
        {
            "name": "[parameters('MatterCenterName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('MatterCenterLocation')]",
            "apiVersion": "2014-06-01",
            "dependsOn": [ ],
            "tags": {
                "displayName": "MatterCenter"
            },
            "properties": {
                "name": "[parameters('MatterCenterName')]",
                "sku": "[parameters('MatterCenterSKU')]",
                "workerSize": "[parameters('MatterCenterWorkerSize')]",
                "numberOfWorkers": 1
            }
        },
        {
            "name": "[parameters('MCWebName')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('MatterCenterLocation')]",
            "apiVersion": "2014-06-01",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('MatterCenterName'))]"
            ],
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('MatterCenterName'))]": "Resource",
                "displayName": "MCWeb"
            },
            "properties": {
                "name": "[parameters('MCWebName')]",
                "serverFarm": "[parameters('MatterCenterName')]"
            }
        },
        {
            "name": "[parameters('MCDBServerName')]",
            "type": "Microsoft.Sql/servers",
            "location": "[parameters('MCDBServerLocation')]",
            "apiVersion": "2014-04-01-preview",
            "dependsOn": [ ],
            "tags": {
                "displayName": "MCDBServer"
            },
            "properties": {
                "administratorLogin": "[parameters('MCDBServerAdminLogin')]",
                "administratorLoginPassword": "[parameters('MCDBServerAdminLoginPassword')]"
            },
            "resources": [
                {
                    "name": "AllowAllWindowsAzureIps",
                    "type": "firewallrules",
                    "location": "[parameters('MCDBServerLocation')]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('MCDBServerName'))]"
                    ],
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "0.0.0.0"
                    }
                },
                {
                    "name": "[parameters('MCDBName')]",
                    "type": "databases",
                    "location": "[parameters('MCDBServerLocation')]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[parameters('MCDBServerName')]"
                    ],
                    "tags": {
                        "displayName": "MCDB"
                    },
                    "properties": {
                        "collation": "[parameters('MCDBCollation')]",
                        "edition": "[parameters('MCDBEdition')]",
                        "maxSizeBytes": "1073741824"
                    },
                    "resources": [
                        {
                            "name": "Import",
                            "type": "extensions",
                            "apiVersion": "2014-04-01-preview",
                            "dependsOn": [
                                "[parameters('MCDBName')]"
                            ],
                            "tags": {
                                "displayName": "MCSQLImport"
                            },
                            "properties": {
                                "storageKeyType": "[parameters('MCSQLImportStorageKeyType')]",
                                "storageKey": "[parameters('MCSQLImportStorageKey')]",
                                "storageUri": "[parameters('MCSQLImportStorageUri')]",
                                "administratorLogin": "[parameters('MCSQLImportAdministratorLogin')]",
                                "administratorLoginPassword": "[parameters('MCSQLImportAdministratorLoginPassword')]",
                                "operationMode": "Import"
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "outputs": {
    }
}
