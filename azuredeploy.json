{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "hostingPlanName": {
            "type": "string"
        },
        "siteLocation": {
            "type": "string"
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard"
            ],
            "defaultValue": "Free"
        },
        "workerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "0"
        },
        "siteName": {
            "type": "string"
        },
        "MCSQLServerName": {
            "type": "string"
        },
        "MCSQLServerLocation": {
            "type": "string"
        },
        "MCSQLServerAdminLogin": {
            "type": "string"
        },
        "MCSQLServerAdminLoginPassword": {
            "type": "securestring"
        },
		"repoUrl": {
			"type": "string"
		},
		"branch": {
			"type": "string"
		},
        "MCSQLDBName": {
            "type": "string"
        },
        "MCSQLDBCollation": {
            "type": "string",
            "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
        },
        "MCSQLDBEdition": {
            "type": "string",
            "defaultValue": "Web",
            "allowedValues": [
                "Basic",
                "Business",
                "Premium",
                "Standard",
                "Web"
            ]
        },
        "MCSQLDBImportStorageKeyType": {
            "type": "string"
        },
        "MCSQLDBImportStorageKey": {
            "type": "securestring"
        },
        "MCSQLDBImportStorageUri": {
            "type": "string"
        },
        "MCSQLDBImportAdministratorLogin": {
            "type": "string"
        },
        "MCSQLDBImportAdministratorLoginPassword": {
            "type": "securestring"
        },
        "MCStorageName": {
            "type": "string"
        },
        "MCStorageType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS"
            ]
        },
        "MCStorageLocation": {
            "type": "string",
            "defaultValue": "Australia East",
            "allowedValues": [
			    "Australia East",
                "East US",
                "West US",
                "West Europe",
                "East Asia",
                "South East Asia"
            ]
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[parameters('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('siteLocation')]",
            "apiVersion": "2014-06-01",
            "dependsOn": [ ],
            "tags": {
                "displayName": "MCPlan"
            },
            "properties": {
                "name": "[parameters('hostingPlanName')]",
                "sku": "[parameters('sku')]",
                "workerSize": "[parameters('workerSize')]",
                "numberOfWorkers": 1
            }
        },
        {
            "name": "[parameters('siteName')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('siteLocation')]",
            "apiVersion": "2014-06-01",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
            ],
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "Resource",
                "displayName": "MCWebApp"
            },
            "properties": {
                "name": "[parameters('siteName')]",
                "serverFarm": "[parameters('hostingPlanName')]"
            },
      "resources": [
        {
          "apiVersion": "2014-04-01",
          "type": "config",
          "name": "web",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', parameters('siteName'))]"
          ],
          "properties": {
            "connectionStrings": [
              {
                "ConnectionString": "[concat('Data Source=tcp:', reference(concat('Microsoft.Sql/servers/', parameters('MCSQLServerName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', parameters('MCSQLDBName'), ';User Id=', parameters('MCSQLServerAdminLogin'), '@', parameters('MCSQLServerName'), ';Password=', parameters('MCSQLServerAdminLoginPassword'), ';')]",
                "Name": "MCConnection",
                "Type": 2
              }
            ],
			"appSettings": [ 
             { "Name": "STORAGE_URL", "Value": "http://www.storageConnection.net/api/v2/" } 
            ] 
          }
        },
        {
          "apiVersion": "2014-04-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]",
            "[concat('Microsoft.Web/Sites/', parameters('siteName'), '/config/web')]"
          ],
          "properties": {
            "RepoUrl": "[parameters('repoUrl')]",
            "branch": "[parameters('branch')]",
            "IsManualIntegration": true
          }
        }
      ]			
        },
        {
            "name": "[parameters('MCSQLServerName')]",
            "type": "Microsoft.Sql/servers",
            "location": "[parameters('MCSQLServerLocation')]",
            "apiVersion": "2014-04-01-preview",
            "dependsOn": [ ],
            "tags": {
                "displayName": "MCSQLServer"
            },
            "properties": {
                "administratorLogin": "[parameters('MCSQLServerAdminLogin')]",
                "administratorLoginPassword": "[parameters('MCSQLServerAdminLoginPassword')]"
            },
            "resources": [
                {
                    "name": "AllowAllWindowsAzureIps",
                    "type": "firewallrules",
                    "location": "[parameters('MCSQLServerLocation')]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('MCSQLServerName'))]"
                    ],
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "0.0.0.0"
                    }
                },
                {
                    "name": "[parameters('MCSQLDBName')]",
                    "type": "databases",
                    "location": "[parameters('MCSQLServerLocation')]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[parameters('MCSQLServerName')]"
                    ],
                    "tags": {
                        "displayName": "MCSQLDB"
                    },
                    "properties": {
                        "collation": "[parameters('MCSQLDBCollation')]",
                        "edition": "[parameters('MCSQLDBEdition')]",
                        "maxSizeBytes": "1073741824"
                    },
                    "resources": [
                        {
                            "name": "Import",
                            "type": "extensions",
                            "apiVersion": "2014-04-01-preview",
                            "dependsOn": [
                                "[parameters('MCSQLDBName')]"
                            ],
                            "tags": {
                                "displayName": "MCSQLDBImport"
                            },
                            "properties": {
                                "storageKeyType": "[parameters('MCSQLDBImportStorageKeyType')]",
                                "storageKey": "[parameters('MCSQLDBImportStorageKey')]",
                                "storageUri": "[parameters('MCSQLDBImportStorageUri')]",
                                "administratorLogin": "[parameters('MCSQLDBImportAdministratorLogin')]",
                                "administratorLoginPassword": "[parameters('MCSQLDBImportAdministratorLoginPassword')]",
                                "operationMode": "Import"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "[parameters('MCStorageName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[parameters('MCStorageLocation')]",
            "apiVersion": "2015-05-01-preview",
            "dependsOn": [ ],
            "tags": {
                "displayName": "MCStorage"
            },
            "properties": {
                "accountType": "[parameters('MCStorageType')]"
            }
        }
    ],
    "outputs": {
    }
}
